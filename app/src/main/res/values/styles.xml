<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/form_title</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="counterMaxLength">4</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/form_title</item>
        <item name="android:padding">28dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="counterMaxLength">14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="botton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerSize">30dp</item>
        <item name="android:background">@drawable/style_botton</item>
    </style>

</resources>